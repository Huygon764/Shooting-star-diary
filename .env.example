# -----------------------------------------------------------------------------
# MongoDB Configuration
# -----------------------------------------------------------------------------
# Local (development)
# MONGODB_URI=mongodb://localhost:27017/shooting-star

# Docker local (development)
MONGODB_URI=mongodb://host.docker.internal:27017/shooting-star

# MongoDB Atlas (production)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/shooting-star

# -----------------------------------------------------------------------------
# JWT Configuration
# -----------------------------------------------------------------------------
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=30d

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
BCRYPT_ROUNDS=12

# -----------------------------------------------------------------------------
# Frontend URL
# -----------------------------------------------------------------------------
# Local
FRONTEND_URL=http://localhost:8080

# Production
# FRONTEND_URL=https://vuonsaobang.biz

# -----------------------------------------------------------------------------
# Telegram Bot Configuration
# -----------------------------------------------------------------------------
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Production only - Enable webhook mode
# TELEGRAM_WEBHOOK_DOMAIN=https://vuonsaobang.biz